@model AccountUpdateViewModel

<h1>Update Profile</h1>

<form asp-action="Update" asp-controller="Account" method="post" asp-antiforgery="true">

    <div asp-validation-summary="ModelOnly"></div>

    <div>
        <label asp-for="FirstName"></label>
        <input asp-for="FirstName" />
        <span asp-validation-for="FirstName"></span>
    </div>

    <div>
        <label asp-for="LastName"></label>
        <input asp-for="LastName" />
        <span asp-validation-for="LastName"></span>
    </div>
    <div>
        <label asp-for="Email"></label>
        <input asp-for="Email" />
        <span asp-validation-for="Email"></span>
    </div>
    <div>
        <input hidden="hidden" asp-for="ProfileId" />
    </div>
    <div>
        <input type="submit" value="Save Changes" />
    </div>
</form>
@Html.ActionLink("Manage Addresses", "Index", "Address", new { id = Model.ProfileId})