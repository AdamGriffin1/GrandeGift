@model HomeIndexViewModel

<div class="container">
    <h1>Home Index Page </h1>
    <p style="font-size:large">Welcome to GandeGift, your one stop shop for all the hampers you could ever need! </p>
    <p style="font-size:larger">This company was made to bring joy to many in the year 1999, and has been a successful business company for many years.
    We are proud sponsors of many charities and wish to spread joy and happiness for all!
    </p>
    <p>
        Our company guarantees quality and reliability, with any and all of our products and services!
    </p>
    <div id="myCarousel" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
            <li data-target="#myCarousel" data-slide-to="2"></li>
        </ol>
        <div class="carousel-inner" role="listbox">
            <div class="item active">
                <img src="~/images/candies.jpg" alt="ASP.NET" style="width:100%; height:60%; justify-content:center;" />
                <div class="carousel-caption" role="option">
                    <p style="color:white; font-weight:bold;">
                        Delicious Candy Hampers!
                    </p>
                </div>
            </div>
            <div class="item">
                <img src="~/images/Christmas-Food-Hampers.jpg" alt="Visual Studio" style="width:100%; height:60%; justify-content:center;" />
                <div class="carousel-caption" role="option">
                    <p style="color:white; font-weight:bold;">
                        What about wonderful Christmas Gifts?
                    </p>
                </div>
            </div>
            <div class="item">
                <img src="~/images/wineHamper.jpeg" alt="Microsoft Azure" style="width:100%; height:60%; justify-content:center;" />
                <div class="carousel-caption" role="option">
                    <p style="color:white; font-weight:bold;background-color:rosybrown">
                        Even Wine Hampers for the Adults
                    </p>
                </div>
            </div>
        </div>
        <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</div>