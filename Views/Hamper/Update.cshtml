@model HamperUpdateViewModel

<form asp-controller="Hamper" asp-action="Update" method="post" asp-antiforgery="true">
    <div>
        <label asp-for="Name"></label>
        <input asp-for="Name" />
    </div>
    <div>
        <label asp-for="Details"></label>
        <input asp-for="Details" />
    </div>
    <div>
        <label asp-for="Price"></label>
        <input asp-for="Price" />
    </div>
    <div class="form-group">
        <div class="custom-file" >
            <input class="custom-file-input" id="customFile" asp-for="Image">
            <label class="custom-file-label" for="customFile">Choose file</label>
        </div>
    </div>
    <div>
        <input hidden="hidden" asp-for="CategoryId" />
    </div>
    <div>
        <input hidden="hidden" asp-for="HamperId" />
    </div>

    <div>
        <input type="submit" value="Save Changes" />
    </div>

</form>
